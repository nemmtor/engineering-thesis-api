datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm-openssl-1.1.x", "linux-musl"]
}

enum UserRole {
  ADMIN
  MANAGER
  QUALITY_CONTROLLER
  SALES_REPRESENTATIVE
  USER
}

model Users {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  archivedAt DateTime?

  name      String
  email     String  @unique
  password  String
  avatarUrl String?
  isActive  Boolean @default(false)

  role   UserRoles @relation(fields: [roleId], references: [id])
  roleId Int
}

model UserRoles {
  id   Int      @id @default(autoincrement())
  role UserRole
  User Users[]
}
